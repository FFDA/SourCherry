<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <TextView
            android:id="@+id/mirror_database_progress_fragment_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>

        <ProgressBar
            android:id="@+id/mirror_database_progress_fragment_progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:id="@+id/mirror_database_progress_fragment_password_textedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/mirror_database_progress_fragment_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">

                <Button
                    android:id="@+id/mirror_database_progress_fragment_password_button_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_cancel"
                    android:layout_marginEnd="20dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/mirror_database_progress_fragment_password_button_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_ok"
                    android:layout_marginStart="20dp"
                    style="?android:attr/buttonBarButtonStyle" />
        </LinearLayout>
</LinearLayout>